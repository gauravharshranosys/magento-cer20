<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="blog_table" resource="default" comment="Create table using declarative schema">
		<column xsi:type="int" name="entity_id" padding="10" identity="true" unsigned="true" nullable="false" comment="Entity Id"/>
		<column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
		<column xsi:type="varchar" name="email" nullable="false" length="255" comment="Email"/>
        <column xsi:type="int" name="contact_no" nullable="false" comment="Contact"/>
        <column xsi:type="varchar" name="location" nullable="true" length="255" comment="Location"/>
		<column xsi:type="timestamp" name="created_at" comment="Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
    		<column name="entity_id"/>
		</constraint>
	</table>
	<table name="blog_post_table" resource="default" comment="Create blog post table using declarative schema">
		<column xsi:type="int" name="blog_id" padding="10" identity="true" unsigned="true" nullable="false" comment="Blog Id"/>
		<column xsi:type="varchar" name="title" nullable="false" length="255" comment="Title"/>
		<column xsi:type="text" name="description" nullable="false" comment="Description"/>
        <column xsi:type="int" name="blogs_entity_id" nullable="true" comment="Seller"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
    		<column name="blog_id"/>
		</constraint>
		<constraint xsi:type="foreign" referenceId="BLOG_POST_TABLE_BLOGS_ENTITY_ID_BLOG_TABLE_ENTITY_ID" table="blog_post_table" column="blogs_entity_id" referenceTable="blog_table" referenceColumn="entity_id" onDelete="CASCADE"/>
	</table>
</schema>