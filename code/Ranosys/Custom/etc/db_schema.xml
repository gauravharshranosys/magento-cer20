<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="blog_table" resource="default" comment="Create table using declarative schema">
		<column xsi:type="int" name="entity_id" padding="10" identity="true" unsigned="true" nullable="false" comment="Entity Id"/>
		<column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
		<column xsi:type="varchar" name="email" nullable="false" length="255" comment="Email"/>
        <column xsi:type="int" name="contact_no" nullable="false" comment="Contact"/>
        <column xsi:type="varchar" name="location" nullable="true" length="255" comment="Location"/>
		<column xsi:type="timestamp" name="created_at" comment="Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
    		<column name="entity_id"/>
		</constraint>
	</table>
</schema>